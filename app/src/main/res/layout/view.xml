<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

<LinearLayout android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:background="#DFD5D5">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="foodID:" android:textSize="18sp" android:textStyle="bold"
                android:textColor="#226FAC"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="foodname:" android:textStyle="bold" android:textSize="18sp"
                android:textColor="#226FAC"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="content:" android:textSize="18sp" android:textStyle="bold"
                android:textColor="#226FAC"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:background="#DFD5D5">

        <TextView
                android:id="@+id/tvrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />

        <TextView
                android:id="@+id/tvcno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />

        <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-" />
        <Button
                android:text="Pay Item"
                android:background="#8BC34A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/pay_cus_btn" android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>




</LinearLayout>