<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".payment" android:background="#DFD5D5">

    <ImageView
            android:layout_width="190dp"
            android:layout_height="167dp" app:srcCompat="@drawable/a"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.019"/>
    <Button
            android:text="Pay"
            android:background="#FF6FAF24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paybtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.14" app:layout_constraintVertical_bias="1.0"
            android:textSize="18sp" android:textStyle="bold" android:textColor="#111010"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.368" app:layout_constraintVertical_bias="0.385"
            android:textSize="18sp" android:textStyle="normal" android:textColor="#2082D5"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:hint="Address"
            android:ems="10"
            android:id="@+id/address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.368" app:layout_constraintVertical_bias="0.484"
            android:textSize="18sp" android:textStyle="normal" android:textColor="#196AAC"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:inputType="number"
            android:hint="Qty"
            android:ems="10"
            android:id="@+id/qty"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.368" app:layout_constraintVertical_bias="0.633"
            android:textSize="18sp" android:textStyle="normal" android:textColor="#196AAC"/>
    <Button
            android:text="ContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactus" android:textSize="18sp"
            android:textStyle="bold" android:background="#009688" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.895"
            app:layout_constraintVertical_bias="1.0"/>
    <RadioButton
            android:text="Cash"
            android:layout_width="129dp"
            android:layout_height="44dp"
            android:id="@+id/cash1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintVertical_bias="0.788"/>
    <RadioButton
            android:text="Visa Card"
            android:layout_width="121dp"
            android:layout_height="39dp"
            android:id="@+id/vcard1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.682"
            app:layout_constraintVertical_bias="0.779"/>
</androidx.constraintlayout.widget.ConstraintLayout>